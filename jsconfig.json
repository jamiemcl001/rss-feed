{
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "moduleResolution": "node",
        "paths": {
            "@components/*": ["./src/scripts/components/*"],
            "@constants/*": ["./src/scripts/constants/*"],
            "@store/*": ["./src/scripts/store/*"]
        },
        "allowSyntheticDefaultImports": true
    }
}